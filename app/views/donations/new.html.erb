<% if @donation.errors.any? %>
	<div id="error_explanation">
		<div class="alert alert-danger">
			The form contains <%= pluralize(@donation.errors.count, "error") %>
		</div>		

		<ul>
			<% @donation.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
<% end %>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for [@campaign, @donation] do |f| %>
			<% if !user_signed_in? %>
				<div class="form-group">
					<%= f.label :author, "Name:" %>
					<%= f.text_field :author, class: "form-control" %>
				</div>
			<% else %>
				<%= f.hidden_field :author, :value => current_user.name %>
			<% end %>

			<div class="form-group">
				<%= f.label :amount, "Donation:" %>
				<%= f.number_field :amount, class: "form-control" %>
			</div>

			<div class="form-group">
				<%= f.label :message, "Comment:" %>
				<%= f.text_area :message, class: "form-control" %>
			</div>

			<%= button_tag(type: 'submit', class: "btn") do %>
 				<i class="icon-ok icon-white"></i> Donate
			<% end %>
		<% end %>
	</div>
</div>