<% if @donation.errors.any? %>
	<div id="error_explanation">
		<div class="alert alert-danger">
			The form contains <%= pluralize(@donation.errors.count, "error") %>
		</div>		

		<ul>
			<% @donation.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
<% end %>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for [@campaign, @donation] do |f| %>
			<% if !user_signed_in? %>
				<div class="field">
					<%= f.label :author %>
					<%= f.text_field :author %>
				</div>
			<% else %>
				<%= f.hidden_field :author, :value => current_user.name %>
			<% end %>

			<div class="field">
				<%= f.label :amount %>
				<%= f.number_field :amount %>
			</div>

			<div class="field">
				<%= f.label :message %>
				<%= f.text_area :message %>
			</div>

			<div class="actions">
				<%= f.submit %>
			</div>
		<% end %>
	</div>
</div>